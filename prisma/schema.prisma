generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id    String @id @default(cuid())
  email String @unique
  nome  String
  senha String
}

model Produto {
  id        Int    @id @default(autoincrement())
  nome      String
  preco     Float
  imagemurl String

  @@map("produto")
}

model Beneficio {
  id        Int    @id @default(autoincrement())
  titulo    String
  descricao String
  icon      String

  @@map("beneficio")
}

model SlideText {
  id    Int    @id @default(autoincrement())
  texto String
  icon  String

  @@map("slidetext")
}
