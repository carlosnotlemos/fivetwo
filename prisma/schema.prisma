generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id                Int                @id @default(autoincrement())
  nome              String
  preco             Float
  imagemurl         String
  categoriaProdutos CategoriaProduto[]

  @@map("produtos")
}

model Categoria {
  id        Int     @id @default(autoincrement())
  nome      String  @unique
  subtitulo String
  imagemurl String

  categoriaProdutos CategoriaProduto[] 

  @@map("categorias")
}

model CategoriaProduto {
  id           Int @id @default(autoincrement())
  produto_id   Int
  categoria_id Int

  produto   Produto   @relation(fields: [produto_id], references: [id])
  categoria Categoria @relation(fields: [categoria_id], references: [id])

  @@unique([produto_id, categoria_id])
  @@map("categorias_produtos") 
}

model Beneficio {
  id        Int    @id @default(autoincrement())
  titulo    String
  descricao String
  icon      String
  imagemurl String

  @@map("beneficios")
}

model SlideText {
  id    Int    @id @default(autoincrement())
  texto String
  icon  String

  @@map("slidetexts")
}

model FooterBannerImg {
  id        Int    @id @default(autoincrement())
  nome      String
  imagemurl String

  @@map("footer_banner_imgs")
}

model Faq {
  id       Int    @id @default(autoincrement())
  pergunta String
  resposta String

  @@map("faqs")
}
